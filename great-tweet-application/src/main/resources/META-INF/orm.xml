<?xml version="1.0" encoding="UTF-8" ?>

<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">
    <description>GreatTweet Entities</description>
    <package>us.greatapps4you.greattweet.entities</package>

    <entity class="us.greatapps4you.greattweet.entities.Tweet" name="Country">
        <table name="MESSAGE"/>
        <attributes>

            <id name="id">
                <generated-value strategy="SEQUENCE" generator="msg-generator"/>
                <sequence-generator name="msg-generator" sequence-name="MSG_SEQ"/>
            </id>

            <basic name="content">
                <column name="CONTENT" length="140"/>
            </basic>

            <basic name="publicationTime">
                <column name="PUB_DATE" length="100"/>
            </basic>
        </attributes>
    </entity>

</entity-mappings>